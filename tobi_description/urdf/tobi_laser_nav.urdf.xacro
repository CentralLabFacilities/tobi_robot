<?xml version="1.0"?>

<robot xmlns:xacro="http://ros.org/wiki/xacro"
      name="tobi_laser_nav">
  
  
  <property name="M_PI" value="3.1415926535897931" />
  
  <!-- all values from the katana manual -->
  <property name="base_height" value="0.2015" />
  <property name="link2_length" value="0.19" />
  <property name="link3_length" value="0.139" />
  <property name="link4_length" value="0.1473" />
  <property name="link5_length" value="0.1505" />
  <property name="tool_frame_offset" value="0.11" />


<joint name="base_link_to_laser_virtual" type="fixed">
    <parent link="base_link" />
    <child link="laser_virtual" />
    <!-- <origin xyz="0 0 0.1397" rpy="0 0 0" /> -->
    <origin xyz="0 0 0.1397" rpy="0 0 0" />
  </joint>

<joint name="base_link_to_laser_front" type="fixed">
    <parent link="base_link" />
    <child link="laser_front" />
    <!-- <origin xyz="0 0 0.1397" rpy="0 0 ${M_PI}"/> -->
    <origin xyz="0.077 0 0.284" rpy="0 0 0"/>
  </joint>

<joint name="base_link_to_laser_rear" type="fixed">
    <parent link="base_link" />
    <child link="laser_rear" />
    <!-- <origin xyz="-0.290 0 0.1397" rpy="0 ${M_PI} 0"/> -->
    <origin xyz="-0.233 0 0.284" rpy="0 ${M_PI} 0"/>
  </joint>

<link name="laser_virtual">
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
    <box size="0.05 0.05 0.05"/>
      </geometry>
    </collision>

    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
    	<box size="0.05 0.05 0.05"/>
      </geometry>
    </visual>
  </link>

<link name="laser_front">
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
    <box size="0.05 0.05 0.05"/>
      </geometry>
    </collision>

    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
    	<box size="0.05 0.05 0.05"/>
      </geometry>
    </visual>

    <inertial>
      <mass value="1e-5" />
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6" />
    </inertial>
  </link>

<link name="laser_rear">
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
    <box size="0.05 0.05 0.05"/>
      </geometry>
    </collision>

    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
    	<box size="0.05 0.05 0.05"/>
      </geometry>
    </visual>

    <inertial>
      <mass value="1e-5" />
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6" />
    </inertial>
  </link>

<joint name="camera_joint" type="fixed">
    <parent link="sensor_head_link" />
    <child link="camera_link" />
    <origin xyz="0.08 0.02 0.20" rpy="0 0 0" />
  </joint>


  <link name="camera_link">
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
    <box size="${camera_link} ${camera_link} ${camera_link}"/>
      </geometry>
    </collision>

    <visual>
      <origin xyz="-0.025 0 -0.12" rpy="0 0 0"/>
      <geometry>
    	<box size="${camera_link} ${camera_link} ${camera_link}"/>
      </geometry>
    </visual>

    <inertial>
      <mass value="1e-5" />
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6" />
    </inertial>
  </link>

